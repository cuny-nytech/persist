<h2>Create A Post</h2>
<% if flash[:error] %>
  <p style="color: red"><%= flash[:error] %></p>
<% end %>
<br/>
<form action="/posts" method="post" role="form">
 <div class="form-group">
   <label for="post_title">Title:</label>
   <br>
   <input id="post_title" class="form-control" name="post[title]" type="text" value="<%= @post.date %>" style="width=90%"/>
</div>
 <div class="form-group">
   <label for="post_title">Line:</label>
   <br>
   <input id="post_title" class="form-control" name="post[line]" type="text" value="<%= @post.line %>" style="width=90%"/>
 </div>
<div class="form-group">
   <label for="post_title">Date:</label>
   <br>
   <input id="post_title" class="form-control" name="post[date]" type="text" value="<%= @post.line %>" style="width=90%"/>
 </div>
<div class="form-group">
   <label for="post_body">Body:</label>
   <br>
   <textarea id="post_body" name="post[body]" class="form-control" rows="10" style="width=90%"><%= @post.body %></textarea>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form>
